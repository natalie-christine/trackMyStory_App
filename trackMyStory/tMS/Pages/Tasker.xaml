<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converter="clr-namespace:tMS.Converter"
             xmlns:viewmodels="clr-namespace:tMS.ViewModels"
             x:Class="tMS.Pages.Tasker"
             Title="So many Tasks . . . .">

    <ContentPage.Resources>
        <converter:ColorConverter x:Key="ColorConverter" />
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Margin="20,0,0,20">
            <Label Text="ProduktivitÃ¤t" FontSize="Header"></Label>
            <HorizontalStackLayout x:Name="ProductivityGrid">
                <Border  HeightRequest="300" MinimumWidthRequest="600" HorizontalOptions="Center"></Border>
            </HorizontalStackLayout>
            <FlexLayout  Margin="0,50,0,0" >
                <Label Text="Kategorien" FontSize="Header"></Label>
            <Button  WidthRequest="80" BackgroundColor="Transparent">
                <Button.ImageSource >
                    <FontImageSource Glyph="{StaticResource GlyphAdd}" FontFamily="{StaticResource GlyphAddFF}" Color="{AppThemeBinding Dark=white, Light=black}" />
                </Button.ImageSource>
            </Button> 
            </FlexLayout>
           

            <FlexLayout Margin="20,20,20,20">
            <HorizontalStackLayout>
                <CollectionView ItemsSource="{Binding Categories}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="5" Orientation="Vertical" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <HorizontalStackLayout>
                               <Button Text="{Binding Name}" FontAttributes="Bold"
                                    BackgroundColor="{Binding Color, Converter={converter:ColorConverter}}"
                                    TextColor="{Binding Color, Converter={converter:ToTextColorConverter}}"/>
                                <Button>
                                    <Button.ImageSource>
                                        <FontImageSource Glyph="{StaticResource GlyphAdd}" FontFamily="{StaticResource GlyphAddFF}" Color="{DynamicResource DynamicPrimaryText}" />
                                    </Button.ImageSource>
                                </Button>
                            </HorizontalStackLayout>
                            
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="5" Margin="50,0,0,0">
                <VerticalStackLayout>
                 <Label Text="Task"></Label>
                <Label Text="Task"></Label>
                <Label Text="Task"></Label>
                <Label Text="Task"></Label>
                <Label Text="Task"></Label>
                <Label Text="Task"></Label> 
                </VerticalStackLayout>

                
            </HorizontalStackLayout>
            </FlexLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
