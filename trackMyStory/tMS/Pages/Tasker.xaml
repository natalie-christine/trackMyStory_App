<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converter="clr-namespace:tMS.Converter"
             xmlns:viewmodels="clr-namespace:tMS.ViewModels"
             x:Class="tMS.Pages.Tasker"
             Title="So many Tasks . . . .">

    <ContentPage.Resources>
        <converter:ColorConverter x:Key="ColorConverter" />
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Margin="20,0,0,20">
            <Label Text="Produktivität" FontSize="Header"></Label>
            <HorizontalStackLayout x:Name="ProductivityGrid">
                <Border  HeightRequest="300" MinimumWidthRequest="600" HorizontalOptions="Center"></Border>
            </HorizontalStackLayout>
            <FlexLayout  Margin="0,50,0,0" >
                <Label Text="Kategorien" FontSize="Header"></Label>
            <Button  WidthRequest="80" BackgroundColor="Transparent">
                <Button.ImageSource >
                    <FontImageSource Glyph="{StaticResource GlyphAdd}" FontFamily="{StaticResource GlyphAddFF}" Color="{AppThemeBinding Dark=white, Light=black}" />
                </Button.ImageSource>
            </Button> 
            </FlexLayout>
           

            <Grid ColumnDefinitions="300,*" ColumnSpacing="20">
                <CollectionView ItemsSource="{Binding Categories}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="5" Orientation="Vertical" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <FlexLayout>
                                    <Button FlexLayout.Grow="1" FlexLayout.Shrink="1" Text="{Binding Name}"
                                        BackgroundColor="{Binding Color, Converter={converter:ColorConverter}}"
                                        TextColor="{Binding Color, Converter={converter:ToTextColorConverter}}"/>
                                    <Button CornerRadius="100" BackgroundColor="{Binding Color, Converter={converter:ColorConverter}}">
                                        <Button.ImageSource>
                                            <FontImageSource Size="14" Glyph="{StaticResource GlyphAdd}" FontFamily="{StaticResource GlyphAddFF}" Color="{Binding Color, Converter={converter:ToTextColorConverter}}" />
                                        </Button.ImageSource>
                                    </Button>
                                </FlexLayout>
                            </Grid>

                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <CollectionView ItemsSource="{Binding Tasks}" Grid.Column="1">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="5" Orientation="Vertical" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <FlexLayout AlignItems="Center" HeightRequest="40">
                                    <CheckBox />
                                    <VerticalStackLayout FlexLayout.Basis="Auto" FlexLayout.Grow="1" FlexLayout.Shrink="1">
                                        <Label Text="{Binding Name}" FontAttributes="Bold" BackgroundColor="Transparent" />
                                        <Label Text="{Binding CategoryId}" BackgroundColor="Transparent" />
                                    </VerticalStackLayout>
                                    <Button Text="Löschen" BackgroundColor="Transparent" TextColor="{DynamicResource DynamicPrimary}"></Button>
                                </FlexLayout>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
