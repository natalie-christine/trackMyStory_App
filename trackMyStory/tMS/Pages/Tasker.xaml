<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converter="clr-namespace:tMS.Converter"
             x:Class="tMS.Pages.Tasker"
             Title="So many Tasks . . . .">

    <ScrollView>
        <VerticalStackLayout Margin="20,0,0,20">
            <Label Text="ProduktivitÃ¤t" FontSize="Header" TextColor="{DynamicResource DynamicPrimaryText}"></Label>
            <HorizontalStackLayout x:Name="ProductivityGrid">
                <Border  HeightRequest="300" MinimumWidthRequest="600" HorizontalOptions="Center"></Border>
            </HorizontalStackLayout>
            <Label Text="Kategorien" Margin="0,50,0,0" FontSize="Header" TextColor="{DynamicResource DynamicPrimaryText}" ></Label>
            <CollectionView ItemsSource="{Binding Categories}">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="5" Orientation="Horizontal" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10" WidthRequest="250">
                            <RoundRectangle BackgroundColor="White" CornerRadius="8" />
                            <Border Shadow="{DynamicResource DynamicPrimaryLight}" BackgroundColor="White" />
                            <VerticalStackLayout Padding="15" Spacing="10" BackgroundColor="{DynamicResource DynamicTertiaryLight}">
                                <Label Text="{Binding PendingTasks, StringFormat='{0} Tasks'}" FontSize="Caption"  />
                                <Label Text="{Binding CategoryName}" FontAttributes="Bold" />
                                <ProgressBar Progress="{Binding Percentage}" ProgressColor="{Binding Color, Converter={converter:ColorConverter}}" />
                            </VerticalStackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>


        </VerticalStackLayout>
    </ScrollView>





</ContentPage>