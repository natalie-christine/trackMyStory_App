<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="tMS.Pages.AddCategoryPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Popups="clr-namespace:tMS.Pages"
    xmlns:components="clr-namespace:tMS.Components"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <toolkit:Popup.Resources>
        <Style TargetType="{x:Type Popups:AddCategoryPage}">
            <Setter Property="HorizontalOptions" Value="Center" />
            <Setter Property="VerticalOptions" Value="Start" />
            <Setter Property="CanBeDismissedByTappingOutsideOfPopup" Value="False" />
        </Style>
    </toolkit:Popup.Resources>

    <Border class="Secondary">
        <VerticalStackLayout>
            <Label
                FontSize="Medium"
                Text="Neue Kategorie hinzufÃ¼gen" />

            <Entry Placeholder="Name" />
            <components:ColorPicker x:Name="ColorPickerCategorie" ColorChanged="ColorPickerCategorie_ColorChanged" />
            <FlexLayout>
                <Button Clicked="Button_Clicked"  Text="OK" FlexLayout.Grow="1" />
                <Button Clicked="Button_Clicked_1"  Text="Abbrechen" FlexLayout.Grow="1" />
  
            </FlexLayout>
           
        </VerticalStackLayout>
    </Border>

</toolkit:Popup>

