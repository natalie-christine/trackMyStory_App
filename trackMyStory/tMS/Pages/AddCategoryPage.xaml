<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="tMS.Pages.AddCategoryPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Popups="clr-namespace:tMS.Pages"
    xmlns:components="clr-namespace:tMS.Components"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <toolkit:Popup.Resources>
        <Style TargetType="{x:Type Popups:AddCategoryPage}">
            <Setter Property="Size" Value="400,330" />
            <Setter Property="Color" Value="Transparent" />
            <Setter Property="HorizontalOptions" Value="Center" />
            <Setter Property="VerticalOptions" Value="Center" />
            <Setter Property="CanBeDismissedByTappingOutsideOfPopup" Value="False" />
        </Style>
    </toolkit:Popup.Resources>

    <Grid Padding="20" BackgroundColor="Transparent">
        <Border class="Secondary">
            <VerticalStackLayout>
                <Label FontSize="Medium" Text="Neue Kategorie hinzufÃ¼gen" />

                <Entry Placeholder="Name" />
                <components:ColorPicker x:Name="ColorPickerCategorie" ColorChanged="ColorPickerCategorie_ColorChanged" />
                <FlexLayout>
                    <Button
                        Margin="0,0,5,0"
                        Clicked="Button_Clicked"
                        FlexLayout.Grow="1"
                        Text="OK" />
                    <Button
                        Margin="5,0,0,0"
                        Clicked="Button_Clicked_1"
                        FlexLayout.Grow="1"
                        Text="Abbrechen" />

                </FlexLayout>

            </VerticalStackLayout>
        </Border>
    </Grid>

</toolkit:Popup>

