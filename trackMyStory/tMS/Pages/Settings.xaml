<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:layouts="clr-namespace:tMS.Layouts"
             x:Class="tMS.Pages.Settings"
             Title="Einstellungen">

    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:InvertedBoolConverter x:Key="InvertedBoolConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <layouts:ResponsiveLayout Margin="20">
            <VerticalStackLayout Spacing="20">
                <Border Padding="10,0,10,10" x:Name="SliderContainer"  StrokeShape="RoundRectangle 10,10,10,10"  >
                    <VerticalStackLayout VerticalOptions="Center" Padding="10,0,20,0">
                        <Label StyleClass="Primary" FontAttributes="Bold" FontSize="Large" HorizontalTextAlignment="Center" Text="Farbauswahl 1" />
                        <Label StyleClass="Primary" Text="Rot:" />
                        <Slider x:Name="sldRed" ValueChanged="Slider_ValueChanged" />
                        <Label StyleClass="Primary" Text="Grün:" />
                        <Slider x:Name="sldGreen" ValueChanged="Slider_ValueChanged" />
                        <Label StyleClass="Primary" Text="Blau:" />
                        <Slider x:Name="sldBlue" ValueChanged="Slider_ValueChanged" />
                    </VerticalStackLayout>
                </Border >
                <layouts:ResponsiveLayout HorizontalThreshold="500">
                    <Button Text="Random Color" Clicked="btnRandom_Clicked" FontSize="Medium" TextColor="{DynamicResource DynamicPrimaryText}"  Grid.Column="0"  >
                        <Button.ImageSource >
                            <FontImageSource Glyph="" FontFamily="FARegular" Color="{DynamicResource DynamicPrimaryText}" >

                            </FontImageSource>
                        </Button.ImageSource>
                    </Button>
                    <Button IsEnabled="{Binding IsUserConfigSaving, Converter={StaticResource InvertedBoolConverter}}" Text="Speichern" Clicked="btnSaveColor1Clicked" FontSize="Medium" BackgroundColor="{DynamicResource DynamicPrimaryDark}">
                        <Button.ImageSource >
                            <FontImageSource Glyph="" FontFamily="FARegular" Color="{DynamicResource DynamicPrimaryText}" >

                            </FontImageSource>
                        </Button.ImageSource>
                    </Button>
                    <Button Text="Zurücksetzen" Clicked="btnBackColor1Clicked" FontSize="Medium" BackgroundColor="{DynamicResource DynamicTertiary}">
                        <Button.ImageSource >
                            <FontImageSource Glyph="" FontFamily="FARegular" Color="{DynamicResource DynamicPrimaryText}" >

                            </FontImageSource>
                        </Button.ImageSource>
                    </Button>
                </layouts:ResponsiveLayout>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="20">
                <Border Padding="10,0,10,10" class="Secondary" x:Name="SliderContainer2"  StrokeShape="RoundRectangle 10,10,10,10">
                    <VerticalStackLayout  VerticalOptions="Center" Padding="10,0,20,0">
                        <Label StyleClass="Secondary" FontAttributes="Bold" FontSize="Large"  HorizontalTextAlignment="Center" Text="Farbauswahl 2" />
                        <Label StyleClass="Secondary" Text="Rot:" />
                        <Slider class="Secondary" x:Name="sldRed2" ValueChanged="Slider_ValueChanged" />
                        <Label StyleClass="Secondary" Text="Grün:" />
                        <Slider class="Secondary" x:Name="sldGreen2" ValueChanged="Slider_ValueChanged" />
                        <Label StyleClass="Secondary" Text="Blau:" />
                        <Slider  class="Secondary" x:Name="sldBlue2" ValueChanged="Slider_ValueChanged" />
                    </VerticalStackLayout>
                </Border>
                <layouts:ResponsiveLayout HorizontalThreshold="500">
                    <Button class="Secondary" Text="Random Color" Clicked="btnRandom2_Clicked" FontSize="Medium">
                        <Button.ImageSource >
                            <FontImageSource Glyph="" FontFamily="FARegular" Color="{DynamicResource DynamicSecondaryText}">

                            </FontImageSource>
                        </Button.ImageSource>
                    </Button>

                    <Button IsEnabled="{Binding IsUserConfigSaving, Converter={StaticResource InvertedBoolConverter}}" class="Secondary" Text="Speichern" Clicked="btnSaveColor2Clicked" FontSize="Medium" BackgroundColor="{DynamicResource DynamicSecondaryDark}">
                        <Button.ImageSource >
                            <FontImageSource Glyph="" FontFamily="FARegular" Color="{DynamicResource DynamicSecondaryText}">
                            </FontImageSource>
                        </Button.ImageSource>
                    </Button>
                    <Button Text="Zurücksetzen" Clicked="btnBackColor2Clicked" FontSize="Medium" TextColor="{DynamicResource DynamicSecondaryText}" BackgroundColor="{DynamicResource DynamicQuartary}">
                        <Button.ImageSource >
                            <FontImageSource Glyph="" FontFamily="FARegular" Color="{DynamicResource DynamicSecondaryText}" >

                            </FontImageSource>
                        </Button.ImageSource>
                    </Button>
                </layouts:ResponsiveLayout>
            </VerticalStackLayout>
        </layouts:ResponsiveLayout>
    </ScrollView>
</ContentPage>

