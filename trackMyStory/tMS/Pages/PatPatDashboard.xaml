<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:behaviors="clr-namespace:tMS.Behaviors"
             xmlns:components="clr-namespace:tMS.Components"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
             x:Class="tMS.Pages.PatPatDashboard"
             Title="PatPatDashboard">

    <Grid >
        <lvc:CartesianChart Grid.Row="0" Margin="0,0,150,0"
            XAxes="{Binding XAxes}"
            Series="{Binding Series}"
            HeightRequest="500">
        </lvc:CartesianChart>
        <VerticalStackLayout Spacing="20"  Grid.Row="1" HorizontalOptions="End" Margin="0,0,30,0">
            <Button Text="PatPat" Clicked="PatPatClicked" WidthRequest="200" VerticalOptions="Start">
                <Button.ImageSource>
                    <FontImageSource Glyph="" FontFamily="FARegular" />
                </Button.ImageSource>
            </Button>
            <Button Text="Gute Nudel" Clicked="StarClicked" WidthRequest="200">
            <Button.ImageSource >
                    <FontImageSource Glyph="" FontFamily="FARegular">
                    </FontImageSource>
            </Button.ImageSource>
        </Button>
            <Button Text="Tasks" Clicked="DoneClicked" WidthRequest="200" >
            <Button.ImageSource >
                    <FontImageSource Glyph="" FontFamily="FARegular">
                    </FontImageSource>
            </Button.ImageSource>
        </Button>
            <Button Text="Step by Step" Clicked="StepsClicked" WidthRequest="200" >
            <Button.ImageSource >
                    <FontImageSource Glyph="" FontFamily="FASolid">
                    </FontImageSource>
            </Button.ImageSource>
        </Button>
        </VerticalStackLayout>
        <VerticalStackLayout Margin="30" Spacing="20" Grid.Row="1" Grid.Column="1" HorizontalOptions="End" VerticalOptions="End">
            <components:ResponsiveIconButton ButtonStyleClass="Secondary" Glyph="" GlyphFontFamily="FASolid" Text="Einstellungen" Clicked="EinstellungenClicked" />
            <components:ResponsiveIconButton ButtonStyleClass="Secondary" Glyph="" GlyphFontFamily="FASolid" Text="NullPlan" Clicked="NullPlanClicked" />
        </VerticalStackLayout>
    </Grid>

</ContentPage>