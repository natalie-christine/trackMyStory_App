<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="tMS.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:tMS"
    xmlns:pages="clr-namespace:tMS.Pages"
    Shell.FlyoutBehavior="Flyout"
    Shell.FlyoutItemIsVisible="False"
    Title="tMS">

    <FlyoutItem FlyoutItemIsVisible="False">
        <ShellContent
            ContentTemplate="{DataTemplate pages:Login}"
            Route="Login" 
        />
    </FlyoutItem>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" 
        />
    <ShellContent
        Title="PatPat - Dashboard"
        ContentTemplate="{DataTemplate pages:PatPatDashboard}"
        Route="PatPatDashboard" 
        />
    <ShellContent
        Title="Einstellungen"
        ContentTemplate="{DataTemplate pages:Settings}"
        Route="Settings" 
    />

    <Shell.FlyoutFooter>
        <Button Text="Logout" Command="{Binding LogoutCommand}" />
    </Shell.FlyoutFooter>
</Shell>
